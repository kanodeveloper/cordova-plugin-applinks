<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        id="cordova-plugin-applinks" version="1.0.1">
    <name>Applinks</name>
    <description>Applinks</description>
    <license></license>
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="Applinks">
                <param name="ios-package" value="Applinks"/>
                <param name="onload" value="true" />
            </feature>
        </config-file>
        <header-file src="src/ios/Applinks.h" />
        <source-file src="src/ios/Applinks.m" />
        <header-file src="src/ios/AppDelegate+Applinks.h" />
        <source-file src="src/ios/AppDelegate+Applinks.m" />
    </platform>
    <platform name="android">
        <config-file target="config.xml" parent="/*">
            <feature name="Applinks">
                <param name="android-package" value="com.kanoapps.cordova.applinks.Applinks"/>
                <param name="onload" value="true" />
            </feature>
        </config-file>
        <config-file target="AndroidManifest.xml" parent="./application/activity">
            <intent-filter android:label="$LABEL" android:autoVerify="true">
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="http" android:host="$HOST"/>
                <data android:scheme="https" android:host="$HOST"/>
            </intent-filter>
            <intent-filter android:label="$LABEL _">
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="$SCHEME"/>
            </intent-filter>
        </config-file>
        <source-file src="src/android/Applinks.java" target-dir="src/com/kanoapps/cordova/applinks" />
    </platform>
</plugin>
